# =============================================================================
# STUDYBOT BACKEND - VARIABLES D'ENVIRONNEMENT
# =============================================================================

# Environnement
NODE_ENV=development
PORT=3001

# Base de données MySQL Azure
# À remplir lors de la création de la base
DB_HOST=your-mysql-server.mysql.database.azure.com
DB_PORT=3306
DB_NAME=studybot_db
DB_USER=your-username
DB_PASSWORD=your-password
DB_SSL=true

# Azure OpenAI
# Variables existantes à fournir
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_MODEL=gpt-4

# Qdrant Vector Database
# Variables existantes à fournir  
QDRANT_URL=https://your-cluster.qdrant.tech
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=studybot_collection

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL=http://localhost:5173
ADMIN_DASHBOARD_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/studybot.log

# Azure Deployment (pour production)
AZURE_APP_SERVICE_NAME=studybot-backend
AZURE_RESOURCE_GROUP=studybot-rg
AZURE_LOCATION=francecentral

# Monitoring (optionnel)
AZURE_APPLICATION_INSIGHTS_KEY=your-insights-key
